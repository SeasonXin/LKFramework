<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_lk_alert_dialog_frame"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/confirm_dialog_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:minHeight="80dp"
        android:textColor="@color/lk_alert_dialog_msg_color"
        android:textSize="@dimen/lk_alert_dialog_msg_textSize" />
    <LinearLayout
        android:id="@+id/confirm_dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/selector_lk_alert_dialog_btn"
        android:gravity="center"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/confirm_dialog_btn_ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_lk_alert_dialog_btn"
            android:gravity="center"
            android:textColor="@color/lk_alert_dialog_btn_textColor"
            android:textSize="@dimen/lk_alert_dialog_btn_textSize" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/lk_alert_dialog_frame_color" />
        <TextView
            android:id="@+id/confirm_dialog_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/selector_lk_alert_dialog_btn"
            android:gravity="center"
            android:textColor="@color/lk_alert_dialog_btn_textColor"
            android:textSize="@dimen/lk_alert_dialog_btn_textSize" />
    </LinearLayout>
</LinearLayout>